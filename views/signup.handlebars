<div
  class="bg-home-img bg-fixed bg-cover bg-center flex items-center min-h-screen"
>
  <div
    class="flex-1 h-full max-w-lg mx-auto opacity-95 bg-white rounded-lg shadow-xl"
  >
    <form>
      <div class="flex flex-col md:flex-row">
        <div
          class="md:flex-1 md:h-full md:max-w-lg md:mx-auto items-center justify-center p-6 sm:p-12 md:w-1/2"
        >
          <div class="w-full">
            <h1 class="mb-4 text-2xl font-bold text-center text-gray-700">
              Create an Account
            </h1>
            <div>
              <label class="block font-bold text-sm">
                First Name
              </label>
              <input
                type="text"
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600 mb-4"
                id="first-name"
                placeholder="First Name"
              >
            </div>
            <div>
              <label class="block font-bold text-sm">
                Last Name
              </label>
              <input
                type="text"
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="last-name"
                placeholder="Last Name"
              >
            </div>
            <div>
              <label class="block font-bold mt-4 text-sm">
                Email
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="email-signup"
                placeholder="Email Address"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Password
              </label>
              <input
                type="password"
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="password-signup"
                placeholder="Password"
                type="password"
                autocomplete="on"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Pay Day (add calendar)
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="pay_day-signup"
                placeholder="Pay Day"
                type="day"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Monthly Income
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="monthly-income-signup"
                placeholder="Monthly Income"
                type="text"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Checking Account
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="checking-signup"
                placeholder="Checking Account"
                type="text"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Saving Account
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="saving-signup"
                placeholder="Saving Account"
                type="text"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                Credit Card
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="credit_card-signup"
                placeholder="Credit Card"
                type="text"
              >
            </div>
            <div class="mt-4">
              <label class="block font-bold text-sm">
                New Checking Account
              </label>
              <input
                class="w-full px-4 py-2 text-sm border rounded-md focus:border-blue-400 focus:outline-none focus:ring-1 focus:ring-purple-600"
                id="new_checking-signup"
                placeholder="New Checking Account"
                type="text"
              >
            </div>
            <button
              type="submit"
              id="signup-button"
              class="block w-full px-4 py-2 mt-4 text-sm font-medium leading-5 text-center text-black transition-colors duration-150 bg-gray-200 border border-transparent rounded-lg hover:bg-purple-500 hover:text-white focus:outline-none focus:shadow-outline-blue"
            >
              Sign up
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/JS/post-new-user.js"></script>
